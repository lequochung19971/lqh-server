{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./app",
  },
  "paths": {
    "@controllers/*": ["controllers/*"],
    "@model/*": ["model/*"],
    "@providers/*": ["providers/*"],
    "@routes/*": ["routes/*"],
    "@shared/*": ["shared/*"],
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.json"
  ],
  "exclude": ["node_modules"]
}
